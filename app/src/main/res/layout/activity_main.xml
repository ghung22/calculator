<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity"
  tools:ignore="NestedWeights,HardcodedText">

  <TextView
    android:id="@+id/textViewPrice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_above="@id/viewSeparator1"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    android:gravity="bottom|end"
    android:textSize="36sp"
    android:fontFamily="monospace"
    tools:text="$50.67" />

  <View
    android:id="@+id/viewSeparator1"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_above="@id/layoutDollar"
    android:background="@android:color/darker_gray" />

  <LinearLayout
    android:id="@+id/layoutDollar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/layoutCent"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/textView20"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      tools:text="$20 x 2" />

    <TextView
      android:id="@+id/textView10"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      android:background="@android:color/darker_gray"
      tools:text="$10 x 1" />

    <TextView
      android:id="@+id/textView5"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      tools:text="$5 x 0" />

    <TextView
      android:id="@+id/textView1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      android:background="@android:color/darker_gray"
      tools:text="$1 x 0" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layoutCent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/viewSeparator2"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/textView25c"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      android:background="@android:color/darker_gray"
      tools:text="25¢ x 2" />

    <TextView
      android:id="@+id/textView10c"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      tools:text="10¢ x 1" />

    <TextView
      android:id="@+id/textView5c"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      android:background="@android:color/darker_gray"
      tools:text="$5 x 1" />

    <TextView
      android:id="@+id/textView1c"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingVertical="8dp"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textAlignment="center"
      android:fontFamily="monospace"
      android:maxLines="1"
      tools:text="$1 x 2" />
  </LinearLayout>

  <View
    android:id="@+id/viewSeparator2"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_above="@id/layoutRowC"
    android:background="@android:color/darker_gray" />

  <LinearLayout
    android:id="@+id/layoutRowC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/layoutRow7"
    android:layout_marginVertical="24dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/buttonC"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="C"
      android:textSize="24sp" />

    <Button
      android:id="@+id/buttonCE"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:visibility="invisible"
      style="?android:attr/buttonBarButtonStyle"
      android:text="CE"
      android:textSize="24sp" />

    <Button
      android:id="@+id/buttonBS"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="←"
      android:textSize="24sp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layoutRow7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/layoutRow4"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/button7"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="7"
      android:textSize="24sp" />

    <Button
      android:id="@+id/button8"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="8"
      android:textSize="24sp" />

    <Button
      android:id="@+id/button9"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="9"
      android:textSize="24sp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layoutRow4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/layoutRow1"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/button4"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="4"
      android:textSize="24sp" />

    <Button
      android:id="@+id/button5"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="5"
      android:textSize="24sp" />

    <Button
      android:id="@+id/button6"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="6"
      android:textSize="24sp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layoutRow1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/layoutRow0"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/button1"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="1"
      android:textSize="24sp" />

    <Button
      android:id="@+id/button2"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="2"
      android:textSize="24sp" />

    <Button
      android:id="@+id/button3"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="3"
      android:textSize="24sp" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/layoutRow0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/button0"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="0"
      android:textSize="24sp" />

    <Button
      android:id="@+id/button00"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="00"
      android:textSize="24sp" />

    <Button
      android:id="@+id/buttonDot"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      style="?android:attr/buttonBarButtonStyle"
      android:text="."
      android:textSize="24sp" />
  </LinearLayout>
</RelativeLayout>